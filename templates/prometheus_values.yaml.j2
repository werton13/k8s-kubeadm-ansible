  alertmanager:
    config:
      route:
        group_by: ['alertname', 'cluster', 'job', 'env']
        group_wait: 30s
        group_interval: 5m
        repeat_interval: 1h
        receiver: 'default'
        routes:
          - match:
              severity: page
            receiver: "{{ alertmgr_telegram_receiver_name }}"
      receivers:
        - name: 'default'
        - name: "{{ alertmgr_telegram_receiver_name }}"
          telegram_configs:
            - bot_token: "{{ alertmgr_telegram_bot_token }}"
              api_url: https://api.telegram.org
              chat_id: "{{ alertmgr_telegram_chatid }}"
              parse_mode: ''

  alerting_rules.yml:
    groups:
     - name: K8s hardware alerts
       rules:
        - alert: Node Down
          expr: up{job="kubernetes-nodes"} == 0
          for: 1m
          labels:
            severity: warning
          annotations:
            title: Node {{ $labels.instance }} is down
            description: Failed to scrape {{ $labels.job }} on {{ $labels.instance }} for more than 1 minutes. Node seems down.
     - name: K8s control plane alerts
       rules:
         - alert: API server down
           expr: up{job="kubernetes-apiservers"} == 0
           for: 30s
           labels:
             severity: page
           annotations:
             title: API server on {{ $labels.instance }} is down
             description: Failed to scrape {{ $labels.job }} on {{ $labels.instance }} for more than 1 minutes. API server is unavailable
